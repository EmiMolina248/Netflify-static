        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@700&display=swap" rel="stylesheet">
        <title>Iniciar sesión</title>
</head>
<body>
  <%-include('fragments/navbar')%>
    <br>
    <br>
    
    <div class="lc-block jumbotron jumbotron-fluid container-fluid " > 
      <div class="row ">
        <div class="col-md-3 align-md-stretch vertical-center">
              <form action="/login" method="post">
                  <div class="form-group" >
                    <h4 style="margin-top:20px; color: rgb(158, 158, 158);">Iniciar Sesión</h4>
                      <label for="usuario"></label>
                      <input type="text" class="form-control" name="usuario" placeholder="Usuario"/>
          </div>
          <div class="form-group">
              <label for="contraseña"></label>
              <input type="password" class="form-control" name="contraseña"  placeholder="Contraseña"/>
              <br>
          </div>
          <div class="form-grosup">
            <button type="submit" class="btn btn-primary" style="padding-left: 2.5rem; padding-right: 2.5rem; background-color: #30499B ; color: rgb(255, 255, 255); border-color: black; border-width: 0.4mm;">Login</button>
                  <style>
                      .form-grosup{
                              text-align: center;
                          }
                  </style>
                </form>
              </div>
            </div>
      </div>
  </div>

    
